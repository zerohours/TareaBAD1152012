@model IEnumerable<TareaBAD1152012.Models.Departamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Departamentos</h2>

<p>
    Muestra un listado de todos los departamentos en el sistema.
</p>
<table class="table table-condensed table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>
            Nombre del Departamento
        </th>
        <th>
            Editar
        </th>
        <th>
            Eliminar
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.ID_DEPTO
        </td>
        <td>
            @item.NOMBRE_DEPTO
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_DEPTO })
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_DEPTO })
        </td>
    </tr>
}

</table>

